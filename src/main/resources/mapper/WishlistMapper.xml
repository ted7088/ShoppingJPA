<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.shoppingjpa.mapper.WishlistMapper">

    <!-- ResultMap -->
    <resultMap id="WishlistResultMap" type="com.example.shoppingjpa.vo.Wishlist">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="productId" column="product_id"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- 위시리스트 추가 -->
    <insert id="insertWishlist" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO wishlist (user_id, product_id, created_at)
        VALUES (#{userId}, #{productId}, NOW())
    </insert>

    <!-- 사용자의 위시리스트 목록 조회 -->
    <select id="findByUserId" resultMap="WishlistResultMap">
        SELECT * FROM wishlist
        WHERE user_id = #{userId}
        ORDER BY created_at DESC
    </select>

    <!-- 특정 사용자의 특정 상품 조회 -->
    <select id="findByUserIdAndProductId" resultMap="WishlistResultMap">
        SELECT * FROM wishlist
        WHERE user_id = #{userId} AND product_id = #{productId}
    </select>

    <!-- 위시리스트 항목 삭제 -->
    <delete id="deleteWishlist">
        DELETE FROM wishlist WHERE id = #{id}
    </delete>

    <!-- 사용자와 상품으로 위시리스트 삭제 -->
    <delete id="deleteByUserIdAndProductId">
        DELETE FROM wishlist WHERE user_id = #{userId} AND product_id = #{productId}
    </delete>

    <!-- 사용자의 위시리스트 개수 -->
    <select id="countByUserId" resultType="int">
        SELECT COUNT(*) FROM wishlist WHERE user_id = #{userId}
    </select>

</mapper>
